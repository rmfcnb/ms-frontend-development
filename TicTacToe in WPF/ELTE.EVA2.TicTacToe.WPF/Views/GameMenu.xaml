<UserControl x:Class="ELTE.EVA2.TicTacToe.WPF.Views.GameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ELTE.EVA2.TicTacToe.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
  <Menu>
    <MenuItem Header="Game">
      <MenuItem Header="Start Game" 
                IsEnabled="False"
                Command="{Binding StartNewGameCommand}" />
      <MenuItem Header="Exit" Click="HandleCloseButton" />
    </MenuItem>
  </Menu>
</UserControl>